@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Hello, world!</title>
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="#">Pokemon</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Employees" asp-action="Index">Employees</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- isi Konten -->
    <div class="container isi_konten">
        <!-- Jumbotron -->
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4 mt-5 text-dark ml-5">Pokemon</h1>
                <p class="lead text-dark ml-5">List Daftar Pokemon</p>
            </div>
        </div>

        <!-- Judul -->
        <div class="row">
            <div class="col">
                <h2>Pokemon</h2>
            </div>
        </div>

        <!-- Tabel -->
        <div class="row center">
            <div class="col">
                <table class="table mt-2 mb-5 text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tablePokemon">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalPokemon" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h2 class="modal-title text-center" id="exampleModalLabel">Detail Pokemon</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col text-center" id="modalPoke_kiri">
                            <!-- di isi js -->
                        </div>
                        <div class="col">
                            <nav>
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#tabInformation" role="tab" aria-controls="tabInformation" aria-selected="true">Information</a>
                                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Species</a>
                                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Abilities</a>
                                </div>
                            </nav>
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane fade show active" id="tabInformation" role="tabpanel" aria-labelledby="nav-information-tab">
                                    <div class="row">
                                        <div class="col mt-4 text-center">
                                            <h5>General Information</h5>
                                        </div>
                                    </div>
                                    <div class="row mt-2 text-center d-flex justify-content-center" id="isiTab1">
                                        <!-- dipindah ke JS -->
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                    <!-- Judul-->
                                    <div class="row">
                                        <div class="col mt-4 text-center">
                                            <h5>Species Information</h5>
                                        </div>
                                    </div>
                                    <!-- Isi Tabs -->
                                    <div class="row mt-2 text-center d-flex justify-content-center" id="tabSpecies">
                                        <!-- dipindahkan ke JS -->
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <!-- Text Egg Groups -->
                                            <div class="row">
                                                <div class="col mt-4 text-center">
                                                    <h5>Egg Groups</h5>
                                                </div>
                                            </div>
                                            <!-- Isi Egg Groups -->
                                            <div class="row">
                                                <div class="col d-flex justify-content-center" id="tabEggGroups">
                                                    <!-- Dipindah ke JS -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                                    <!-- JudulTabs 3 -->
                                    <div class="row">
                                        <div class="col mt-4 d-flex justify-content-center" style="padding: 0px !important;">
                                            <h5>Abilities</h5>
                                        </div>
                                    </div>
                                    <div class="row text-center d-flex justify-content-center mr-3" id="isiAbilities">
                                        <!-- Dipindahkan ke JS -->
                                    </div>
                                    <!-- Text Special Power Abilities -->
                                    <div class="row">
                                        <div class="col text-center mt-4">
                                            <h5>Special Power Abilites</h5>
                                        </div>
                                    </div>
                                    <!-- Isi Special Abilities -->
                                    <div class="row mt-2">
                                        <div class="col">
                                            <!-- Special Attack -->
                                            <div class="row">
                                                <div class="col-5 text-center">
                                                    <p class="text-right">Special Attack</p>
                                                </div>
                                                <div class="col">
                                                    <div class="progress" id="spAttack">
                                                        <!-- Dipindahkan Ke JS -->
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Special Defense -->
                                            <div class="row">
                                                <div class="col-5 text-center">
                                                    <p class="text-right">Special Defense</p>
                                                </div>
                                                <div class="col">
                                                    <div class="progress" id="spDefense">
                                                        <!-- Dipindahkan Ke JS -->
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Speed -->
                                            <div class="row">
                                                <div class="col-5 text-center">
                                                    <p class="text-right">Speed</p>
                                                </div>
                                                <div class="col">
                                                    <div class="progress" id="spSpeed">
                                                        <!-- Dipindahkan Ke JS -->
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <p>PokeAPI 2022</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="page-footer sticky-bottom blue text-center text-md-left mt-0 bg-dark text-white pt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center">
                    <h5 class="title mb-3">Footer Content</h5>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestiae, quibusdam at ab a quisquam explicabo. Vero eum dolore expedita, voluptas cupiditate, deleniti aut officiis nulla labore nemo fugiat iure quibusdam!</p>
                </div>
                <div class="col-md-6">
                    <h5 class="title mb-3">Keep in Touch With Me</h5>
                    <ul>
                        <li><a href="#!">Instagram</a></li>
                        <li><a href="#!">Twitter</a></li>
                        <li><a href="#!">Linkedin</a></li>
                        <li><a href="#!">Github</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="text-center bg-primary text-white">
                © 2022 MCC 63 Reo Sahobby
            </div>
        </div>
    </footer>
    <!-- Optional JavaScript -->
    <script src="~/js/effect.js" asp-append-version="true"></script>
    <script src="~/js/getAjax.js" asp-append-version="true"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>
