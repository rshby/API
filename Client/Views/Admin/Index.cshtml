@{
    ViewData["Title"] = "LatihanBelajar";
    Layout = "_LayoutAdmin";
}

<!-- Button Insert Data-->
<div class="row">
    <div class="col d-flex justify-content-end">
        <button type="button" class="btn btn-success align-items-right mb-2" data-toggle="modal" data-target="#modalInsertData">
            Add Employee
        </button>
    </div>
</div>

<!-- Tabel Daftar Employee -->
<div class="row">
    <div class="col-12 d-flex justify-content-center">
        <table class="table" id="tableEmployees">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">NIK</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Email</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Salary</th>
                    <th scope="col">University</th>
                    <th scope="col">Degree</th>
                    <th scope="col">GPA</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dipindahkan ke JS -->
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Insert (di luar container)-->
<div class="modal fade bd-example-modal-lg" id="modalInsertData" tabindex="-1" role="dialog" aria-labelledby="modalInsertDataLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4>Form Insert Data Employee</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form-->
                <form class="needs-validation" id="formInsertDataEmployee" onsubmit="return false" novalidate>
                    <!-- Formnya -->
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" class="form-control" id="inputFirstName" required>
                                <div class="invalid-feedback">
                                    Please Insert a First Name.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" id="inputLastName" required>
                                <div class="invalid-feedback">
                                    Please Insert a Last Name.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" id="inputPhone" required>
                                <div class="invalid-feedback">
                                    Please Insert a Phone Number.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Birth Date</label>
                                <input type="date" class="form-control input-group-sm" id="inputBirthDate" required>
                                <div class="invalid-feedback">
                                    Please Insert a Birth Date.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Salary</label>
                                <input type="text" class="form-control" id="inputSalary" required>
                                <div class="invalid-feedback">
                                    Please Insert a Salary.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" id="inputEmail" required>
                                <div class="invalid-feedback">
                                    Please Insert an Email.
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Gender</label>
                                <select class="form-control" id="inputGender" required>
                                    <option value="" disabled selected>Select Gender</option>
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please Insert a Gender.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" id="inputPassword" required>
                                <div class="invalid-feedback">
                                    Please Insert a Password.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Degree</label>
                                <select class="form-control" id="inputDegree" required>
                                    <option value="" disabled selected>Select Degree</option>
                                    <option value="S1">S1</option>
                                    <option value="S2">S2</option>
                                    <option value="S3">S3</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please Insert a Degree.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>GPA</label>
                                <input type="text" class="form-control" id="inputGPA" required>
                                <div class="invalid-feedback">
                                    Please Insert a GPA.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>University</label>
                                <select class="form-control" id="inputUniversity" required>
                                    <option value="" disabled selected>Select Universities</option>
                                    <!-- Ditampilkan dengan JS-->
                                </select>
                                <div class="invalid-feedback">
                                    Please Insert a University.
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Formnya -->

                    <!-- Button Insert Data Employee -->
                    <div class="row">
                        <div class="col d-flex justify-content-end">
                            <button type="submit" class="btn btn-success mt-5" onclick="InsertDataEmployee()">Add Data</button>
                        </div>
                    </div>
                </form>
                <!-- End Form -->
            </div>
        </div>
    </div>
</div>

<!-- Modal Update (di luar container)-->
<div class="modal fade bd-example-modal-lg" id="modalUpdate" tabindex="-1" role="dialog" aria-labelledby="modalUpdateLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalUpdateLabel">Update Data Employee</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form -->
                <form role="form" method="PUT" class="needs-validation" id="formUpdateDataEmployee" onsubmit="return false" novalidate>
                    <div class="form-row">
                        <!-- Form kiri -->
                        <div class="col">
                            <div class="form-group">
                                <label class="control-label">First Name</label>
                                <input type="text" class="form-control" id="updateFirstName" value="" required>
                                <div class="invalid-feedback">
                                    Please Insert a First Name.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" id="updateLastName" value="" required>
                                <div class="invalid-feedback">
                                    Please Insert a Last Name.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" id="updateEmail" value="" required>
                                <div class="invalid-feedback">
                                    Please Insert an Email.
                                </div>
                            </div>
                        </div>

                        <!-- Form Kanan -->
                        <div class="col">
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" id="updatePhone" value="" required>
                                <div class="invalid-feedback">
                                    Please Insert a Phone Number.
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Salary</label>
                                <input type="text" class="form-control" id="updateSalary" value="" required>
                                <div class="invalid-feedback">
                                    Please Insert a Salary.
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Button Update -->
                    <div class="row">
                        <div class="col d-flex justify-content-end" id="buttonUpdateDataEmployee">
                            <!-- Dipindahkan ke JS-->
                        </div>
                    </div>
                </form>
                <!-- End Form -->
            </div>
        </div>
    </div>
</div>
